---
import { SEO_TITLE, SEO_DESC } from "@/constants/seo";
import "@/styles/globals.css";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={SEO_DESC} />

    <meta property="og:title" content={SEO_TITLE} />
    <meta property="og:description" content={SEO_DESC} />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="Easywalink" />
    <meta property="og:type" content="website" />

    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:title" content={SEO_TITLE} />
    <meta property="twitter:description" content={SEO_DESC} />
    <meta property="twitter:image" content="/og-image.png" />
    <meta property="twitter:site" content="@Ramadhan_firhan" />

    <link rel="canonical" href={Astro.url} />

    <title>{SEO_TITLE}</title>
  </head>
  <body class="min-h-screen w-screen relative">
    <slot />
  </body>
</html>
