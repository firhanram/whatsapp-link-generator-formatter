---
import { SEO_TITLE, SEO_DESC } from "@/constants/seo";
import "@/styles/globals.css";
import Analytics from "@vercel/analytics/astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />

    <link rel="icon" href="/favicon.ico" type="image/x-icon" />
    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={SEO_DESC} />

    <meta property="og:title" content={SEO_TITLE} />
    <meta property="og:description" content={SEO_DESC} />
    <meta property="og:image" content="/og-image.png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="Easywalink" />
    <meta property="og:type" content="website" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={SEO_TITLE} />
    <meta name="twitter:description" content={SEO_DESC} />
    <meta name="twitter:image" content={`${Astro.url}/og-image.png`} />
    <meta name="twitter:site" content="@Ramadhan_firhan" />

    <link rel="canonical" href={Astro.url} />

    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <title>{SEO_TITLE}</title>
  </head>
  <body class="min-h-screen w-screen relative">
    <slot />
    <Analytics />
  </body>
</html>
