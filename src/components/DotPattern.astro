---
import { cn } from "@/lib/utils";

export interface Props {
  className?: string;
}

const { className } = Astro.props;
---

<svg
  aria-hidden="true"
  class={cn(
    "pointer-events-none absolute -z-[1] inset-0 h-full w-full fill-neutral-400/80 opacity-50",
    className
  )}
>
  <defs>
    <pattern
      id="dot-pattern"
      width={20}
      height={20}
      patternUnits="userSpaceOnUse"
      patternContentUnits="userSpaceOnUse"
      x="0"
      y="0"
    >
      <circle id="pattern-circle" cx="1" cy="1" r="1"></circle>
    </pattern>
  </defs>
  <rect width="100%" height="100%" stroke-wdith={0} fill={`url(#dot-pattern)`}
  ></rect>
</svg>
